<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:paddingTop="2dip"
    android:paddingBottom="2dip"
    android:paddingLeft="16dp"
    android:background="#E8EAF6">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="68dp"
        android:src="@mipmap/person"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        >

    <TextView
        android:id="@+id/calculation_title_friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:text="Person 1"
        android:textStyle="bold"
        android:textColor="#0F4D92"
        android:textAppearance="?android:attr/textAppearanceMedium" />


        <TextView
            android:id="@+id/phone_friend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dip"
            android:text="844657893"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dip"
                android:text="Amount To Be Paid : Rs. "
                android:textAppearance="?android:attr/textAppearanceSmall" />


            <TextView
                android:id="@+id/calculation_amount_friend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100"
                android:textAppearance="?android:attr/textAppearanceSmall" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>